SELECT title, author, amount,
    (
     SELECT MAX(amount)
     FROM book
     
     ) - amount  AS Заказ
FROM book
WHERE (
     SELECT MAX(amount)
     FROM book
     )<>amount;



INSERT INTO book (title, author, price, amount) 
SELECT title, author, price, amount 
FROM supply
WHERE author NOT IN (
        SELECT author 
        FROM book
      );

SELECT * FROM book;

